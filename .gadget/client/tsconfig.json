{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "types": [
      "node"
    ],
    "outDir": "./dist-cjs",
    "declaration": true,
    "declarationDir": "./types",
    "isolatedModules": true
  },
  "include": [
    "./src/**/*"
  ]
}